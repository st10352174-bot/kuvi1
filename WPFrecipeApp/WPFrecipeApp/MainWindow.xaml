<Window x:Class="WPFrecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFrecipeApp"
        mc:Ignorable="d"
        Title="Culinary Companion" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Text="Welcome to the Culinary Companion" FontSize="24" Margin="10" HorizontalAlignment="Center"/>
            <Button Content="Add New Recipe" Click="AddNewRecipe_Click" Margin="10"/>
            <Button Content="Display Recipes" Click="DisplayRecipes_Click" Margin="10"/>
            <Button Content="Adjust Recipe" Click="AdjustRecipe_Click" Margin="10"/>
            <Button Content="Reset Quantities" Click="ResetQuantities_Click" Margin="10"/>
            <Button Content="Clear Recipe" Click="ClearRecipe_Click" Margin="10"/>
            <Button Content="Exit" Click="Exit_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>