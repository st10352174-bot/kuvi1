<Window x:Class="WPFrecipeApp.DisplayRecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFrecipeApp"
        mc:Ignorable="d"
       Title="Display Recipes" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Display Recipes" FontSize="24" Margin="10" HorizontalAlignment="Center"/>
            <ListBox Name="RecipesListBox" Margin="10"/>
            <Button Content="Show Recipe" Click="ShowRecipe_Click" Margin="10"/>
            <Button Content="Close" Click="Close_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>